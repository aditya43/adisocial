{
  "name": "adisocial",
  "version": "1.0.0",
  "description": "Social network built using MERN (Mongo DB, Express, React.js, Node.js) stack.",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aditya43/adisocial.git"
  },
  "author": "Aditya Hajare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aditya43/adisocial/issues"
  },
  "homepage": "https://github.com/aditya43/adisocial#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.6.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
